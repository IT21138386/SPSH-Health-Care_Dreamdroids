<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/docbck2"
    android:backgroundTint="#61615F"
    android:backgroundTintMode="add"
    tools:context=".Available_DOC">

    <TextView
        android:id="@+id/TV1_UPDATEDOC_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="UPDATE DOCTOR PROFILE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV2_UPDATEDOC_Name"
        android:layout_width="151dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Doctor Name :"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et2_UPDATEDOC_Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV1_UPDATEDOC_Name" />

    <EditText
        android:id="@+id/et2_UPDATEDOC_Name"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/et2_UPDATEDOC_Name"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV2_UPDATEDOC_Name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TV3_UPDATEDOC_Speciality"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Speciality :"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et3_UPDATEDOC_Speciality"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV2_UPDATEDOC_Name" />

    <EditText
        android:id="@+id/et3_UPDATEDOC_Speciality"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/et3_UPDATEDOC_Speciality"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV3_UPDATEDOC_Speciality"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TV4_WorkingPlace"
        android:layout_width="158dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Working Place :"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et4_UPDATEDOC_WorkingPlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV3_UPDATEDOC_Speciality" />

    <EditText
        android:id="@+id/et4_UPDATEDOC_WorkingPlace"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/et4_UPDATEDOC_WorkingPlace"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV4_WorkingPlace"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TV5_UPDATEDOC_Experience"
        android:layout_width="161dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Experience :"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et5_UPDATEDOC_Experience"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV4_WorkingPlace" />

    <EditText
        android:id="@+id/et5_UPDATEDOC_Experience"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/et5_UPDATEDOC_Experience"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV5_UPDATEDOC_Experience"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TV6_UPDATEDOC_Fee"
        android:layout_width="154dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:text="Fee :"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/et6_UPDATEDDOC_fee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV5_UPDATEDOC_Experience" />

    <TextView
        android:id="@+id/TV7_UPDATEDOC_MaximumPat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Maximum Patients :"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numtxt_UPDATEDOC_MaxPatients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV6_UPDATEDOC_Fee" />

    <EditText
        android:id="@+id/numtxt_UPDATEDOC_MaxPatients"
        android:layout_width="173dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/numtxt_UPDATEDOC_MaxPatients"
        android:inputType="number"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV7_UPDATEDOC_MaximumPat"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/BTN_UPDATEDOC_CONFIRM"
        android:layout_width="263dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FFC107"
        android:onClick="updateDoc"
        android:text="CONFIRM UPDATE"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numtxt_UPDATEDOC_MaxPatients" />

    <EditText
        android:id="@+id/et6_UPDATEDDOC_fee"
        android:layout_width="173dp"
        android:layout_height="52dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/et6_UPDATEDDOC_fee"
        android:inputType="numberDecimal"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/TV6_UPDATEDOC_Fee"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_update_back"
        android:layout_width="269dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#45C6BA"
        android:onClick="back"
        android:text="@string/btn_update_back"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTN_UPDATEDOC_CONFIRM" />

</androidx.constraintlayout.widget.ConstraintLayout>