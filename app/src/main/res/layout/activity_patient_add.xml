        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tv_addTime_sathira"
        android:textColor="#1565C0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addDate_sathira" />

    <TextView
        android:id="@+id/tv_addGender_sathira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tv_addGender_sathira"
        android:textColor="#1565C0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addAge_sathira" />

    <TextView
        android:id="@+id/tv_addNum_sathira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tv_addNum_sathira"
        android:textColor="#1565C0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addGender_sathira" />

    <TextView
        android:id="@+id/tv_addNic_sathira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tv_addNic_sathira"
        android:textColor="#1565C0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addNum_sathira" />

    <TextView
        android:id="@+id/tv_addName_sathira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/tv_addName_sathira"
        android:textColor="#1565C0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
